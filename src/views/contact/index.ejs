<div class="contact-container">
    <div class="contact-header">
        <h1>Contact Us</h1>
        <p>Have questions, feedback, or suggestions? We'd love to hear from you!</p>
    </div>
    
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="error-list">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    
    <div class="contact-card">
        <form action="/contact" method="POST" class="contact-form">
            <div class="form-group">
                <label for="subject">Subject</label>
                <input 
                    type="text" 
                    id="subject" 
                    name="subject" 
                    required 
                    minlength="5" 
                    maxlength="200"
                    value="<%= typeof formData !== 'undefined' ? formData.subject : '' %>"
                >
            </div>
            
            <div class="form-group">
                <label for="message">Message</label>
                <textarea 
                    id="message" 
                    name="message" 
                    required 
                    minlength="20" 
                    maxlength="2000" 
                    rows="6"
                ><%= typeof formData !== 'undefined' ? formData.message : '' %></textarea>
                <div class="char-counter">
                    <span id="char-count">0</span>/2000
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
        </form>
    </div>
    
    <div class="contact-info">
        <div class="info-item">
            <h3>Login Status</h3>
            <p>
                <% if (user) { %>
                    You are logged in as <strong><%= user.username %></strong>. Your contact information will be associated with your account.
                <% } else { %>
                    You are not logged in. If you'd like your message to be associated with your account, please <a href="/auth/login">log in</a> first.
                <% } %>
            </p>
        </div>
        
        <div class="info-item">
            <h3>Response Time</h3>
            <p>We typically respond to inquiries within 1-2 business days. Thank you for your patience.</p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const messageTextarea = document.getElementById('message');
        const charCount = document.getElementById('char-count');
        
        // Update character count on input
        messageTextarea.addEventListener('input', function() {
            const count = this.value.length;
            charCount.textContent = count;
            
            // Change color if nearing limit
            if (count > 1800) {
                charCount.style.color = '#c0392b';
            } else if (count > 1500) {
                charCount.style.color = '#f39c12';
            } else {
                charCount.style.color = '';
            }
        });
        
        // Initial count update
        if (messageTextarea.value) {
            charCount.textContent = messageTextarea.value.length;
        }
    });
</script>

<style>
    .contact-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .contact-header {
        text-align: center;
        margin-bottom: var(--spacing-xl);
    }
    
    .contact-header p {
        color: #666;
    }
    
    .contact-card {
        background-color: white;
        padding: var(--spacing-lg);
        border-radius: var(--border-radius-md);
        box-shadow: var(--shadow-sm);
        margin-bottom: var(--spacing-lg);
    }
    
    .char-counter {
        text-align: right;
        font-size: 0.75rem;
        color: #666;
        margin-top: var(--spacing-xs);
    }
    
    .contact-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--spacing-md);
    }
    
    .info-item {
        background-color: #f9f9f9;
        padding: var(--spacing-md);
        border-radius: var(--border-radius-md);
    }
    
    .info-item h3 {
        margin-top: 0;
        margin-bottom: var(--spacing-sm);
        font-size: 1.25rem;
        border-bottom: 1px solid #eee;
        padding-bottom: var(--spacing-xs);
    }
    
    .info-item p {
        margin-bottom: 0;
    }
    
    @media (max-width: 768px) {
        .contact-info {
            grid-template-columns: 1fr;
        }
    }
</style>